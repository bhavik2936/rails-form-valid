<div>

  <div class="row">
    <h1 class="mx-auto">Manager #<%= @manager.id %></h1>
  </div>
  
  <div class="row">
    <div class="border rounded col-md-5 col-6 p-2 my-1 mx-auto">
      <h3 class="text-center"><%= @manager.name %></h3>
    </div>
  </div>
    <div class="border rounded col-md-5 col-6 p-2 my-1 mx-auto">
      <h5 class="my-3">Employees:</h5>
      <% @manager.employee.each do |employee| %>
        <li><%= link_to employee.name, employee %></li>
      <% end %>
    </div>

  </div>

  <div class="row">
    <%= link_to "Back", managers_path, class: 'mx-auto' %>
    <%= link_to "Modify", edit_manager_path, class: 'mx-auto' %>
    <%= link_to "Delete", manager_path, method: :delete, data: { confirm: "Are you sure want to delete manager \"#{ @manager.name }\"?" }, class: 'mx-auto' %>
  </div>
</div>