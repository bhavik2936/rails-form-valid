<div class="container">

  <div class="row">
    <h1 class="mx-auto">Employee #<%= @employee.id %></h1>
  </div>
  
  <div class="row">
    <div class="border rounded col-md-5 col-6 p-2 my-1 mx-auto">
      <p>Name: <%= @employee.name %></p>
      <p>Email: <%= @employee.email %></p>
      <p>Date of Birth: <%= @employee.dob %></p>
      <p>Mobile: <%= @employee.mobile %></p>
    </div>

    <div class="border rounded col-md-5 col-6 p-2 my-1 mx-auto">
      <p>Designation: <%= @employee.designation %></p>
      <p>Salary: <%= @employee.salary %></p>
      <p>Manager: <%= @employee.manager.name %></p>
    </div>
  </div>

  <div class="row">
    <%= link_to "Back", :back, class: 'mx-auto' %>
  </div>
</div>